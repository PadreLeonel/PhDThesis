{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "GZoltar Visualizon Input",
  "type": "object",
  "properties": {
    "nodes": {
      "description": "Array containing all nodes",
      "type": "array",
      "items": {
        "title": "Node",
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/definitions/id"
          },
          "name": {
            "type": "string"
          },
          "parentId": {
            "$ref": "#/definitions/id"
          },
          "type": {
            "type": "number",
            "minimum": 0
          },
          "properties": {
            "type": "object"
          },
          "children": {
            "description": "Id's of childs of the node",
            "type": "array",
            "items": {
              "$ref": "#/definitions/id"
            },
            "minItems": 1,
            "uniqueItems": true
          }
        },
        "required": [
          "id",
          "name",
          "parentId",
          "type"
        ]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "config": {
      "title": "Configuration parameters",
      "type": "object",
      "properties": {
        "types": {
          "description": "Array containing all the possible types of a node",
          "type": "array",
          "items": {
            "title": "Type name",
            "type": "string"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      },
      "required": [
        "types"
      ]
    }
  },
  "required": [
    "nodes",
    "config"
  ],
  "definitions": {
    "id": {
      "type": "number",
      "minimum": 0
    }
  }
}